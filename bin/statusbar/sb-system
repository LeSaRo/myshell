#!/bin/sh
# Display RAM and CPU usage

memory=$(free -h | awk '/^Mem/ { print ":"$3 }' | sed s/i//g)
cpu=$(iostat -c | awk 'NR>=4 && NR <=4' | awk '{print "󰍛:"$3"%"}')

case "$BLOCK_BUTTON" in
    3) $TERMINAL -e btop ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

echo $memory" "$cpu

unset memory

exit 0
