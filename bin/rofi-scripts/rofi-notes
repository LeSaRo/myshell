#!/bin/bash

path="$MYSH_DIR_GRIMOIRE""/docs/"
oldpath="$path"
themestr_fb='element { children: [element-text];} entry {placeholder: "Grimoire";} window { width: 30%; }'
themestr_ne="window {height: 5%;} entry {placeholder: 'Enter name';}"
echo $path

newnote() {
    name="$(echo "" | rofi -theme-str "$themestr_ne" -dmenu )" || exit 0
    : "${name:=$(date +%F_%T | tr ':' '-')}"
    setsid -f "$TERMINAL" -e nvim $path/$name".md" >/dev/null 2>&1
}

while [ -d $path$choice ]; do
    files="New\n$(ls -1p --group-directories-first $path)"
    choice=$(echo -e "$files" | rofi -theme-str "$themestr_fb" -dmenu "$@") || exit 0
    echo $choice

    case $choice in
        New) newnote ;;
        *.md) setsid -f "$TERMINAL" -e nvim "$path/$choice" >/dev/null 2>&1 ;;
        */) oldpath="$path"; path="$path""$choice"; choice="" ;;
        *) exit ;;
    esac
done
